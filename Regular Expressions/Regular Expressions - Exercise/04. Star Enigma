    class Program
    {
        static void Main()
        {
            var atacked = new List<Planet>();
            var destroyed = new List<Planet>();

            int n = int.Parse(Console.ReadLine());
            string countPattern = @"S|s|T|t|A|a|R|r";
            string planetPattern = @".*@(?<planet>[A-Za-z]+).*:(?<population>\d+)!(?<type>[A|D]{1})!->(?<soldier>\d+).*";

            for (int i = 0; i < n; i++)
            {
                string message = Console.ReadLine();

                var matchForDecrypt = Regex.Matches(message, countPattern);

                int countForRemove = matchForDecrypt.Count;
                string result = string.Empty;

                foreach (var item in message)
                {
                    result += (char)(item - countForRemove);
                }

                Match matchPlanet = Regex.Match(result, planetPattern);

                if (matchPlanet.Success)
                {
                    var planetName = matchPlanet.Groups["planet"].Value;
                    var population = int.Parse(matchPlanet.Groups["population"].Value);
                    var type = char.Parse(matchPlanet.Groups["type"].Value);
                    var soldier = int.Parse(matchPlanet.Groups["soldier"].Value);

                    Planet newPlanet = new Planet(planetName, population, type, soldier);

                    if (newPlanet.AtackType == 'A')
                    {
                        atacked.Add(newPlanet);
                    }
                    else
                    {
                        destroyed.Add(newPlanet);
                    }
                }
            }

            Console.WriteLine($"Attacked planets: {atacked.Count}");

            foreach (var planet in atacked.OrderBy(x => x.Name))
            {
                Console.WriteLine($"-> {planet.Name}");
            }

            Console.WriteLine($"Destroyed planets: {destroyed.Count}");

            foreach (var planet in destroyed.OrderBy(x => x.Name))
            {
                Console.WriteLine($"-> {planet.Name}");
            }
        }
    }

    public class Planet
    {
        public string Name { get; set; }
        public int Population { get; set; }
        public char AtackType { get; set; }
        public int Soldiers  { get; set; }

        public Planet(string name, int population, char type, int soldier)
        {
            Name = name;
            Population = population;
            AtackType = type;
            Soldiers = soldier;
        }
    } 
