            var boughtFurniture = new List<string>();
            decimal totalPrice = 0;
            var regex = @">>(?<item>.+)<<(?<price>\d+\.?\d*)!(?<quantity>\d+)";

            string furniture = Console.ReadLine();
            while (furniture != "Purchase")
            {
                Match match = Regex.Match(furniture, regex);

                if (match.Success)
                {
                    var currentFurniture = match.Groups["item"].Value;
                    decimal currentPrice = decimal.Parse(match.Groups["price"].Value);
                    int quantity = int.Parse(match.Groups["quantity"].Value);

                    boughtFurniture.Add(currentFurniture);
                    totalPrice += currentPrice * quantity;
                }

                furniture = Console.ReadLine();
            }

            Console.WriteLine("Bought furniture:");
            
            foreach (var item in boughtFurniture)
            {
                Console.WriteLine(item);
            }
            
            Console.WriteLine($"Total money spend: {totalPrice:F2}");
