            //string pattern = @"%(?<customer>[A-Z][a-z]+)%<(?<product>\w+)>\|(?<count>\d+)\|(?<price>\d+\.?\d*)\$";
            string pattern = @".*%(?<customer>[A-Z][a-z]+)%.*<(?<product>\w+)>.*\|(?<count>\d+)\|\D*(?<price>\d+\.?\d*)\$.*";
            decimal totalPrice = 0;

            string lines = Console.ReadLine();
            while (lines != "end of shift")
            {
                Match match = Regex.Match(lines, pattern);

                if (match.Success)
                {
                    var customer = match.Groups["customer"].Value;
                    var product = match.Groups["product"].Value;
                    var count = int.Parse(match.Groups["count"].Value);
                    var price = decimal.Parse(match.Groups["price"].Value);

                    decimal currentPrice = price * count;
                    totalPrice += currentPrice;

                    Console.WriteLine($"{customer}: {product} - {currentPrice:F2}");
                }

                lines = Console.ReadLine();
            }

            Console.WriteLine($"Total income: {totalPrice:F2}");
