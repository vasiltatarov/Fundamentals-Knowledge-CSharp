        string text = Console.ReadLine();

        string emailPattern = @"(^|(?<=\s))(([a-zA-Z0-9]+)([\.\-_]?)([A-Za-z0-9]+)(@)([a-zA-Z]+([\.\-_][A-Za-z]+)+))(\b|(?=\s))";

        var matches = Regex.Matches(text, emailPattern);

        foreach (Match email in matches)
        {
            Console.WriteLine(email);
        }
