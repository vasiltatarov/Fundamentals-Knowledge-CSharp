using System;
using System.ComponentModel;
using System.Diagnostics.CodeAnalysis;
using System.Linq;
using System.Runtime.ExceptionServices;
using System.Runtime.InteropServices;
using System.Security.Cryptography;
using System.Transactions;

namespace RealWorldExample
{
    class Program
    {
        public static void Main()
        {
            int t, i, fact = 1;
            Console.WriteLine("Enter the number of test cases ");
            t = Convert.ToInt32(Console.ReadLine());
            int[] array = new int[t];
            Console.WriteLine("Enter The numbers");
            for (i = 0; i < t; i++)
            {
                array[i] = Convert.ToInt32(Console.ReadLine());
            }

            double result = GetFacturial(t, i, fact, array);
            Console.WriteLine($"{result:F2}");
        }

        static double GetFacturial(int t, int i, int fact, int[] array)
        {
            for (i = 0; i < t; i++)
            {
                int n = array[i];
                fact = 1;
                for (int j = 1; j <= n; j++)
                {
                    fact = fact * j;
                    array[i] = fact;
                }
            }
            double result = array[0] / array[1];
            return result;
        }
    }
}
