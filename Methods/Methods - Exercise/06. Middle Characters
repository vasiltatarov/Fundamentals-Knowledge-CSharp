        static void Main()
        {
            string text = Console.ReadLine();

            MiddleCharacters(text);
        }

        static void MiddleCharacters(string text)
        {
            string middleChars = string.Empty;

            if (text.Length % 2 == 0)
            {
                middleChars += text[text.Length / 2 - 1];
            }

            middleChars += text[text.Length / 2];

            Console.WriteLine(middleChars);
        }
