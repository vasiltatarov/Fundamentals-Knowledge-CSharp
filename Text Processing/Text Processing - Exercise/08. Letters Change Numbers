            string line = Console.ReadLine();
            string[] splittedLines = line.Split(new[] { " " }, StringSplitOptions.RemoveEmptyEntries);
            double result = 0;

            for (int i = 0; i < splittedLines.Length; i++)
            {
                char firstLetter = splittedLines[i][0];
                char lastLetter = splittedLines[i][splittedLines[i].Length - 1];

                int currentNumber = int.Parse(splittedLines[i].Substring(1, splittedLines[i].Length - 2));

                double currentSum = 0;
                double firstLetterPosition = 0;
                double lastLetterPosition = 0;

                if (firstLetter >= 65 && firstLetter <= 90)
                {
                    firstLetterPosition = firstLetter - 65 + 1;
                    currentSum += currentNumber / firstLetterPosition;
                }
                else
                {
                    firstLetterPosition = firstLetter - 97 + 1;
                    currentSum += currentNumber * firstLetterPosition;
                }

                if (lastLetter >= 65 && lastLetter <= 90)
                {
                    lastLetterPosition = lastLetter - 65 + 1;
                    currentSum -= lastLetterPosition;
                }
                else
                {
                    lastLetterPosition = lastLetter - 97 + 1;
                    currentSum += lastLetterPosition;
                }

                result += currentSum;
            }

            Console.WriteLine($"{(decimal)result:F2}");
