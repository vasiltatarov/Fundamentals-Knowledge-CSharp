            int n = int.Parse(Console.ReadLine());

            for (int i = 0; i < n; i++)
            {
                string text = Console.ReadLine();

                string name = string.Empty;
                int age = 0;
                int firstIndex = 0;
                int lastIndex = 0;
                int firstAgeIndex = 0;
                int lastAgeIndex = 0;

                for (int k = 0; k < text.Length; k++)
                {
                    if (text[k] == '@')
                    {
                        firstIndex = k + 1;
                    }
                    else if (text[k] == '|')
                    {
                        lastIndex = k;
                    }
                    else if (text[k] == '#')
                    {
                        firstAgeIndex = k + 1;
                    }
                    else if (text[k] == '*')
                    {
                        lastAgeIndex = k;
                    }
                }

                name = text.Substring(firstIndex, lastIndex - firstIndex);
                age = int.Parse(text.Substring(firstAgeIndex, lastAgeIndex - firstAgeIndex));

                Console.WriteLine($"{name} is {age} years old.");
            }
